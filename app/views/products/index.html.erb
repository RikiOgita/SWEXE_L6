<% if flash[:info] %>
  <%= flash[:info] %>
<% end %>

<% @products.each do |e| %>
  <p>
    <%= e.name %>
    <%= e.price %>
    <%= link_to '削除', product_path(e), method: :delete %>
    <%= link_to 'カートに入れる', new_cart_item_path(product_id: e.id) %>
  </p>
<% end %>

<p> 
  <%= link_to '商品を新規登録する', new_product_path %>
</p>
<p>
    <%= link_to 'カートを見る', carts_show_path %>
</p>
